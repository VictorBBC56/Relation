@model IEnumerable<Category>


<div>
    <a class="btn btn-primary" asp-action="Create">Create</a>

    @if (TempData["OK"] != null)
    {
        <div class="alert alert-primary" role="alert">
            ไม่พบข้อมูล
        </div>
    }
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        @foreach (var p in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@p.Id</th>
                    <td>@p.Name</td>
                    <th>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                        <a class="btn btn-danger" onclick="return confirm('Are you sure?')" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                    </th>
                </tr>
            </tbody>
        }

    </table>
</div>

